<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/quality"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="100dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP VERIFICATION"
            android:textColor="#FFFF66"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter the OTP sent to you"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textColor="#E6FFF7"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <EditText
                android:paddingLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/tv"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="D"
                android:textSize="20dp"
                android:id="@+id/dig1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"/>

            <EditText
                android:paddingLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/tv"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="D"
                android:textSize="20dp"
                android:id="@+id/dig2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"/>

            <EditText
                android:paddingLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/tv"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="D"
                android:textSize="20dp"
                android:id="@+id/dig3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"/>

            <EditText
                android:paddingLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/tv"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="D"
                android:textSize="20dp"
                android:id="@+id/dig4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"/>

            <EditText
                android:paddingLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/tv"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="D"
                android:textSize="20dp"
                android:id="@+id/dig5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"/>

            <EditText
                android:paddingLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/tv"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="D"
                android:textSize="20dp"
                android:id="@+id/dig6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive the otp "
                android:textColor="@color/teal_200"
                android:textSize="14dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP Again"
                android:textColor="#FFDDCC"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/resend"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <Button
            android:id="@+id/verify"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="verify"
            />

            <ProgressBar
                android:id="@+id/pb_otp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone">

            </ProgressBar>

        </FrameLayout>

    </LinearLayout>

</ScrollView>